<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>


    <style name="AppTheme" parent="BaseAppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:toolbarStyle">@style/CommonToolBarTheme</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--titlebar bg color-->
        <item name="android:colorPrimaryDark">@color/bg_titlebar</item>

        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>

    </style>

    <style name="CommonToolBarTheme">
        <!--toobar bg color-->
        <item name="android:colorPrimary">@color/bg_toolbar</item>
        <!--titlebar text color-->
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <!--navigationbar bg color-->
        <item name="android:navigationBarColor">@color/bg_navigationbar</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_actionbar_back</item>
    </style>


    <style name="BlackToolBarTheme1" parent="AppTheme">
        <!--toobar bg color-->
        <item name="android:colorPrimary">@color/bg_black</item>
        <!--titlebar bg color-->
        <item name="android:colorPrimaryDark">@color/bg_black</item>
        <!--titlebar text color-->
        <item name="android:textColorPrimary">#ffffff</item>
        <!--navigationbar bg color-->
        <item name="android:navigationBarColor">@color/bg_navigationbar</item>

    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tab_bar_indicator</item>
        <item name="tabIndicatorHeight">4dp</item>
        <!--<item name="tabBackground">@color/tab_bar_tabed_bg</item>-->
        <item name="tabTextAppearance">@style/TabLayoutText</item>
        <item name="tabSelectedTextColor">@color/toolbar_tab_text_selected</item>
        <item name="tabMinWidth">80dp</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/toolbar_tab_text_unselected</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">@color/toolbar_text</item>
    </style>

    <style name="ToolbarSubTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/action_bar_subtitle_text_size</item>
        <item name="android:textColor">@color/toolbar_text</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/bg_white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="WindowAnimationStyle" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>


    <style name="TitleTextStyle" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">#606060</item>
    </style>

    <style name="WhiteTitleTextStyle" parent="android:TextAppearance.Holo.Medium">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SubtitleTextStyle" parent="android:TextAppearance.Holo.Small">
        <item name="android:textSize">@dimen/action_bar_subtitle_text_size</item>
        <item name="android:textColor">#949495</item>
    </style>


    <style name="LoadingDialogStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="OcrResultDialogStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FadeDialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="PushDialogAnimation" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_down_out</item>
    </style>

    <style name="CommonDialogStyle" parent="android:Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ModifyDialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="leftdrawTextStyle">
        <item name="android:paddingLeft">11dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/sub_text_color2</item>
    </style>

    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#e0e0e0</item>
        <item name="android:popupBackground">@color/bg_white2</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>
